<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!-- Define a reference container -->
        <referenceContainer name="content">
            <!-- Insert a block into the content container -->
            <block class="VendorName\ModuleName\Block\YourBlockClass" name="your.block.name" template="VendorName_ModuleName::your_template.phtml" />
        </referenceContainer>

        <!-- Add a layout handle for a specific page or action -->
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Page Title</argument>
            </action>
        </referenceBlock>
    </body>
</page>
